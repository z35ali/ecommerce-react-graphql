{
  "connection": "default",
  "collectionName": "brands",
  "info": {
    "name": "Brand"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "shoes": {
      "via": "brand",
      "collection": "shoe"
    }
  }
}
